<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
             x:Class="MBModManager.Controls.DropInstallControl"
             x:Name="DropInstallBox"
             mc:Ignorable="d" 
             d:DesignHeight="184" d:DesignWidth="584" DragEnter="DropInstallControl_DragEnter" Drop="DropInstallControl_Drop">
    <Grid>
        <Rectangle Height="184" Stroke="#CC60A917" Width="584" HorizontalAlignment="Center" VerticalAlignment="Center" Fill="#FF101010" AllowDrop="True"/>
        <iconPacks:PackIconModern Kind="DiskDownload" Foreground="#FFDADADA" Height="41" Width="65" HorizontalAlignment="Center" Margin="0,51,0,0" AllowDrop="True"/>
        <Label Content="Drop File Here" Foreground="#FFC3C3C3" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,97,0,0" AllowDrop="True"/>

    </Grid>
</UserControl>
